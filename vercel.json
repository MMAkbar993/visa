{
  "version": 2,
  "installCommand": "composer install --no-dev --optimize-autoloader",
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.5.2"
    }
  },
  "rewrites": [
    { "source": "/inc/sentMail.php", "destination": "/api/sentmail.php" },
    { "source": "/privacy-policy", "destination": "/api/privacy-policy.php" },
    { "source": "/terms-and-conditions", "destination": "/api/terms-and-conditions.php" },
    { "source": "/thankyou", "destination": "/api/thankyou.php" },
    { "source": "/(.*)", "destination": "/api/index.php" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
