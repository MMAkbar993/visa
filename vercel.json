{
  "version": 2,
  "functions": {
    "**/*.php": {
      "runtime": "vercel-php@0.5.2"
    }
  },
  "rewrites": [
    { "source": "/privacy-policy", "destination": "/privacy-policy/index.php" },
    { "source": "/terms-and-conditions", "destination": "/terms-and-conditions/index.php" },
    { "source": "/thankyou", "destination": "/thankyou/index.php" },
    { "source": "/(.*)", "destination": "/index.php" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
